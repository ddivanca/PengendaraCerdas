<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TipsberkendarayangbaikActivity"
        android:background="@drawable/background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips Berkendara Yang Baik"
                android:textSize="30sp"
                android:layout_marginTop="100dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="417dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="vertical"
                android:gravity="center">
            <Button
                    android:id="@+id/btnTipspengendarasepeda"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:text="Tips untuk pengendara sepeda"/>
            <Button
                    android:id="@+id/btnTipsengendaramotor"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:text="Tips untuk pengendara motor"/>
            <Button
                    android:id="@+id/btnTipspengendaramobil"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:text="Tips untuk pengendara mobil"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>